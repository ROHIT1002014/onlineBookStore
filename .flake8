[flake8]
ignore = E999, E203, E266, E501, W503, F403, F401
max-line-length = 79
max-complexity = 18
select = B,C,E,F,W,T4,B9
exclude =
    # No need to traverse our git directory
    .git,
    digistud_backend/settings.py,
    __pycache__,
    # The conf file is mostly autogenerated, ignore it
    # docs/source/conf.py,
    # This contains our built documentation
    # This contains webpack builds
    dist,
    migrations,
    manage.py,
